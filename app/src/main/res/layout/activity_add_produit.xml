<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProduit">

    <TextView
        style="@style/titre"
        android:text="@string/titremenu3"/>
    
    <EditText
        style="@style/zonesaisie"
        android:hint="Libelle ...."
        android:id="@+id/addlib"/>

    <EditText
        style="@style/zonesaisie"
        android:hint="Famille ...."
        android:id="@+id/addfam"/>

    <EditText
        style="@style/zonesaisie"
        android:hint="Prix achat ...."
        android:inputType="numberDecimal"
        android:id="@+id/addpa"/>


    <EditText
        style="@style/zonesaisie"
        android:hint="Prix vente ...."
        android:inputType="numberDecimal"
        android:id="@+id/addpv"/>

    <Button
        style="@style/btnMenu"
        android:text="Ajouter"
        android:onClick="ajouterProduit"/>

</LinearLayout>